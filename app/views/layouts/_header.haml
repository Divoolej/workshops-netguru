%nav.navbar.navbar-inverse.navbar-static-top.header
  .container
    .navbar-header
      %span.navbar-brand #{AppConfig.workshops_name}
      %button{ type: "button", data: { toggle: 'collapse', target: '#workshops-navbar' }, class: 'navbar-toggle collapsed' }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #workshops-navbar.collapse.navbar-collapse
      %ul.nav.navbar-right.navbar-nav
        %li
          = link_to "Home", root_path
        - if user_signed_in?
          %li.active
            = link_to 'Profile', user_path(current_user)
          %li
            = link_to 'Sign Out', destroy_user_session_path, method: :delete
        - else
          %li.active
            = link_to "Sign In", new_user_session_path
          %li
            = link_to "Sign Up", new_user_registration_path