= form_for [category, product] do |f|
  - if product.errors.any?
    #error_explanation
      %h2= "#{pluralize(product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :price
    = f.text_field :price, class: 'form-control'

  .row
    - if product.persisted?
      .col-sm-2.col-xs-4
        = f.submit 'Save', class: 'btn btn-default btn-block'
      .col-sm-2.col-xs-4.col-sm-offset-3
        = link_to 'Show', category_product_path(category, product), class: 'btn btn-default btn-block'
      .col-sm-2.col-xs-4.col-sm-offset-3
        = link_to 'Back', category_path(category), class: 'btn btn-default btn-block'
    - else
      .col-sm-3.col-xs-6
        = f.submit 'Create', class: 'btn btn-default btn-block'
      .col-sm-3.col-xs-6.col-sm-offset-6
        = link_to 'Back', category_path(category), class: 'btn btn-default btn-block'